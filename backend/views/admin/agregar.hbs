<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h3 class="text-center">Agregar una novedad</h3>
      <form action="/admin/novedades/agregar" method="POST" enctype="multipart/form-data">
        <div class="form-group mb-4">
          <label for="titulo"><i class="fas fa-quote-left"></i> Titulo</label>
          <input 
            type="text" 
            class="form-control" 
            placeholder="Ingrese un titulo (max 250 caracteres)" 
            name="titulo"
            autocomplete="off"
            required
            >
        </div>
        <div class="form-group mb-4">
          <label for="subtitulo"><i class="fas fa-quote-right"></i> Subtitulo</label>
          <textarea 
            class="form-control" 
            rows="1" 
            placeholder="Ingrese un subtitulo" 
            name="subtitulo"
            required
            ></textarea>
        </div>
        <div class="form-group mb-4">
          <label for="cuerpo"><i class="fas fa-file-lines"></i> Cuerpo</label>
          <textarea 
            class="form-control" 
            rows="5" 
            placeholder="Ingrese el cuerpo de la novedad" 
            name="cuerpo"
            required
            ></textarea>
        </div>
        <div class="form-group mb-4">
          <label for="imagen"><i class="fa-solid fa-image"></i> Imagen:</label>
          <input type="file" name="imagen" id="imagen">
        </div>
        <div class="btn-group mb-4" role="group">
          <button type="submit" class="btn btn-success">Agregar</button>
          <a href="/admin/novedades" type="button" class="btn btn-danger">Cancelar</a>
        </div>
      </form>
    </div>
  </div>
</div>